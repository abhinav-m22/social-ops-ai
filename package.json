{
  "name": "social-ops-ai-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "app"
  ],
  "scripts": {
    "backend": "npm run dev --workspace=backend",
    "app": "npm run dev --workspace=app",
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=app\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules api/node_modules app/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  }
}